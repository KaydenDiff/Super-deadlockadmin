<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeadLockApp.UserPage"
             Title="UserPage">
    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Добро пожаловать!"
               FontSize="24" HorizontalOptions="Center" TextColor="White"/>

        <Label Text="{Binding Username}" FontSize="20" HorizontalOptions="Center" />
        <Label Text="{Binding Role}" FontSize="18" HorizontalOptions="Center" />

        <!-- Добавьте другие элементы, которые вам нужны -->
    </VerticalStackLayout>

</ContentPage>