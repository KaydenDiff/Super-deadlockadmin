<Shell
    x:Class="DeadLockApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DeadLockApp"
    TabBarBackgroundColor="#453f34"
    TabBarUnselectedColor="#ada58c"
    TabBarDisabledColor="#ada58c"
    TabBarTitleColor="#efdfc0">

    <!-- Страница для логина -->
   
    <TabBar>
        <Tab Title="Главная" Icon="home_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

        <Tab Title="Герои" Icon="heroes.png">
            <ShellContent ContentTemplate="{DataTemplate local:Heroes}" />
        </Tab>

        <Tab Title="Предметы" Icon="items.png">
            <ShellContent ContentTemplate="{DataTemplate local:Items}" />
        </Tab>
        <Tab Title="Авторизация" Icon="items.png">
            <ShellContent ContentTemplate="{DataTemplate local:LoginPage}" />
        </Tab>
    </TabBar>
    
   </Shell>
