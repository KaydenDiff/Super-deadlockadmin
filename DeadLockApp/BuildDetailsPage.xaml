<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DeadLockApp.ViewModels"
             x:Class="DeadLockApp.BuildDetailsPage"
             BackgroundColor="#2b2923">
    <ContentPage.BindingContext>
        <vm:BuildDetailsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout>
            <!-- Заголовок -->
            <Label Text="{Binding BuildName}"
                   FontSize="28"
                   TextColor="#efdfc0"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>

            <!-- Предметы по этапам -->
            <!-- Этап "Начало" -->
            <Label Text="Начало" FontSize="24" TextColor="#35b093" Margin="0,10,0,5" HorizontalOptions="Center"/>
            <FlexLayout Wrap="Wrap" JustifyContent="Start" AlignItems="Start" Direction="Row" Margin="8,0,0,0">
                <BindableLayout.ItemsSource>
                    <x:Binding Path="StartItems" />
                </BindableLayout.ItemsSource>
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="2" Margin="1" WidthRequest="90" HeightRequest="120" BackgroundColor="#3e3b36">
                            <VerticalStackLayout>
                                <Image Source="{Binding Image}" WidthRequest="100" HeightRequest="100" Aspect="AspectFill" />
                                <HorizontalStackLayout HorizontalOptions="Center">
                                    <Image Source="souls.png" WidthRequest="10" HeightRequest="16" />
                                    <Label Text="{Binding Cost}" FontSize="14" TextColor="#47fdd3" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>

            <!-- Этап "Середина" -->
            <Label Text="Середина" FontSize="24" TextColor="#35b093" Margin="0,10,0,5" HorizontalOptions="Center"/>
            <FlexLayout Wrap="Wrap" JustifyContent="Start" AlignItems="Start" Direction="Row" Margin="8,0,0,0">
                <BindableLayout.ItemsSource>
                    <x:Binding Path="MiddleItems" />
                </BindableLayout.ItemsSource>
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="2" Margin="1" WidthRequest="90" HeightRequest="120" BackgroundColor="#3e3b36">
                            <VerticalStackLayout>
                                <Image Source="{Binding Image}" WidthRequest="100" HeightRequest="100" Aspect="AspectFill" />
                                <HorizontalStackLayout HorizontalOptions="Center">
                                    <Image Source="souls.png" WidthRequest="10" HeightRequest="16" />
                                    <Label Text="{Binding Cost}" FontSize="14" TextColor="#47fdd3" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>

            <!-- Этап "Конец" -->
            <Label Text="Конец" FontSize="24" TextColor="#47b59b" Margin="0,10,0,5" HorizontalOptions="Center"/>
            <FlexLayout Wrap="Wrap" JustifyContent="Start" AlignItems="Start" Direction="Row" Margin="8,0,0,0">
                <BindableLayout.ItemsSource>
                    <x:Binding Path="EndItems" />
                </BindableLayout.ItemsSource>
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="2" Margin="1" WidthRequest="90" HeightRequest="120" BackgroundColor="#3e3b36">
                            <VerticalStackLayout>
                                <Image Source="{Binding Image}" WidthRequest="100" HeightRequest="100" Aspect="AspectFill" />
                                <HorizontalStackLayout HorizontalOptions="Center">
                                    <Image Source="souls.png" WidthRequest="10" HeightRequest="16" />
                                    <Label Text="{Binding Cost}" FontSize="14" TextColor="#47fdd3" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
